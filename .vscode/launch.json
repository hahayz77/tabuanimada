{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug full stack with Chrome",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        }
    ]
}